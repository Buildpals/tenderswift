<% if @purchaser.request_for_tender.selling_price == 0 %>
  showPurchaseInProgress('Putting finishing touches...')
<% else %>
  showPurchaseInProgress('Please confirm the purchase on your phone...')
<% end %>

setTimeout(function checkOnPayment () {
  $.get('<%= monitor_purchase_path(@purchaser.request_for_tender) %>')
    .fail(function (error) {
      console.log(error)
      showPurchaseError('Sorry, something went wrong')
    })
}, 5000)