<%= form_with url: purchase_path(@request_for_tender),
              id: 'purchase-form',
              local: false do |form| %>
  <div class="form-group">
    <%= form.label :network_code, 'Mode of payment' %>
    <%= form.select :network_code,
                    options_for_select({
                                           'Airtel Money': 'AIR',
                                           'MTN Mobile Money': 'MTN',
                                           'Tigo Cash': 'TIG',
                                           'Vodafone Cash': 'VOD'
                                       }),
                    {},
                    {
                        selected: 'Airtel Money',
                        id: :network_code,
                        class: 'form-control form-control-sm network-select',
                        required: true
                    } %>
  </div>

  <div class="form-group">
    <%= form.label :customer_number, 'Mobile money number' %>
    <%= form.telephone_field :customer_number,
                             id: :customer_number,
                             class: 'form-control form-control-sm',
                             required: true %>
  </div>

  <div class="form-group voucher-code">
    <%= form.label :vodafone_voucher_code, 'Voucher code' %>
    <%= form.text_field :vodafone_voucher_code,
                        id: :vodafone_voucher_code,
                        class: 'form-control form-control-sm',
                        required: true %>
  </div>

  <%= button_tag 'Purchase',
                 id: :make_purchase_button,
                 class: 'btn btn-secondary btn-block mt-5',
                 data: {
                     disable_with: "<i class='fa fa-spinner fa-spin'></i> Making purchase..."
                 } %>

<% end %>