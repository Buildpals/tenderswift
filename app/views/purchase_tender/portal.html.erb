<% content_for :modals do %>
  <div class="modal <% 'fade' unless Rails.env.test? %>"
       id="paymentModal"
       tabindex="-1"
       role="dialog"
       aria-labelledby="paymentModalLabel"
       aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            Purchase Tender Documents
          </h5>
          <button id="purchaseFormClose"
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-10 mx-auto pt-3 pb-5">
              <%= render 'purchase_tender/purchase_form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="tab-content">

  <div class="row d-flex flex-wrap justify-content-between
                  align-items-baseline mb-3">

    <div class="col-md-7 col-lg-7
               text-center text-md-left text-lg-left mb-2">
      <a href="<%= contractor_root_path %>">
        Click here if you've already purchased this tender
      </a>
    </div>

    <div class="col-md-5 col-lg-5">
      <button class="btn btn-sm btn-block btn-secondary"
              id="purchase-button"
              data-toggle="modal"
              data-target="#paymentModal"
              data-backdrop="static"
              data-keyboard="false">
        Purchase this tender for
        GHâ‚µ <%= @request_for_tender.selling_price %>
      </button>
    </div>

  </div>

  <%= render 'request_for_tenders/public_information',
             request_for_tender: @request_for_tender %>
</div>