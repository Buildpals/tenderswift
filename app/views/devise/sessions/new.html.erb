<div class="container">
  <div class="row">

    <div class="col-lg-8 mx-auto pt-4">
      <%= render 'layouts/notice' %>
    </div>

  </div>

  <div class="row">
    <div class="col-lg-4 mx-auto">
      <h2 class="text-center mb-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control form-control-sm', required: true, placeholder: "Email eg. youremail@example.com" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-sm', required: true, placeholder: "Your Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: 'shared-links' %>
              </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-primary col-md-12', data: {disable_with: "Signing in..."} %>
          </div>
      <% end %>
      <br/>
      <div class="row">
        <% unless is_admin_signin? %>
          <%= render "devise/shared/links" %>
        <% else %>
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                <div class="col-md-12">
                  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'shared-links' %>
                </div>
            <% end -%>
        <% end %>
      </div>
      
    </div>
  </div>

</div>

