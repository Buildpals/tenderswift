<div class="container">
  <div class="row">

    <div class="col-lg-8 mx-auto pt-4">
      <%= render 'layouts/notice' %>
    </div>

  </div>

  <div class="row">
    <div class="col-lg-4 mx-auto">
      <h2 class="text-center mb-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, placeholder: 'Email eg. youremail@example.com' %>
          </div>
          <div class="form-group">
            <%= f.telephone_field :phone_number, autocomplete: "on", class: 'form-control', required: true, placeholder: 'Phone Number eg(0509835811)', data: { parsley_trigger:"keyup", parsley_type: "digits", parsley_minlength:"10", parsley_maxlength:"10", parsley_minlength_message:"Enter you phone number eg(0509835811)" }%>
          </div>


          <div class="form-group my-4">
            <small class="form-text text-muted">
              (Enter the name of the company you work for here)
            </small>
            <%= f.text_field :company_name, autocomplete: "on", class: 'form-control', required: true, placeholder: 'Company Name'%>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, placeholder: 'Password', data: { parsley_trigger:"keyup", parsley_minlength:"6", parsley_maxlength:"100", parsley_minlength_message:"At least six characters" } %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true, placeholder: 'Confirm password', data: { parsley_trigger:"keyup", parsley_minlength:"6", parsley_maxlength:"100", parsley_minlength_message:"At least six characters" } %>
          </div>



          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary col-md-12', data: { disable_with: "Signing Up"} %>
          </div>
      <% end %>
      <div class="row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>

<script>
$(function () {
  $('#new_quantity_surveyor').parsley().on('field:validated', function() {
    var ok = $('.parsley-error').length === 0;
    $('.bs-callout-info').toggleClass('hidden', !ok);
    $('.bs-callout-warning').toggleClass('hidden', ok);
  })
});
</script>