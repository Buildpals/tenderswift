      <% else %>

        <li class="nav-item mr-3">
          <%= link_to 'Login', new_contractor_session_path, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Signup', new_contractor_registration_path, class: 'nav-link' %>
        </li>

      <% end %>
    </ul>

  </div>
