<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to contractor_root_path, class: 'navbar-brand' do %>
    <img src="https://res.cloudinary.com/tenderswift/image/upload/c_scale,h_24/v1520926501/tenderswift-logo.png"
         alt="TenderSwift"
         class="d-inline-block align-top">
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if contractor_signed_in? %>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle"
             href="<%= quantity_surveyor_root_path %>"
             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Request For Tenders
          </a>
          <div class="dropdown-menu" aria-labelledby="request_for_tender_links">
            <%= link_to quantity_surveyor_root_path, class: 'dropdown-item' do %>
              My Tender Requests <span class="sr-only">(current)</span>
            <% end %>
            <%= link_to new_request_for_tender_path, class: 'dropdown-item' do %>
              Create New<span class="sr-only">(current)</span>
            <% end %>
          </div>
        </li>

      <% end %>
    </ul>
    <ul class="navbar-nav ml-auto">
      <% if contractor_signed_in? %>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle"
             href="<%= edit_contractor_path(current_contractor) %>"
             id="account_links" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="fa fa-user" aria-hidden="true"></span>
            <%= current_contractor.company_name %>
          </a>
          <div class="dropdown-menu fix-screen" aria-labelledby="account_links">
            <%= link_to "Account Information", edit_contractor_path(current_contractor),
                        class: 'dropdown-item' %>
            <%= link_to "Logout", destroy_contractor_session_path, method: :delete,
                        class: 'dropdown-item' %>
