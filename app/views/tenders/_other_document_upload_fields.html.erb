<div class="nested-fields">
  <div class="form-row">
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control form-control-sm', placeholder: 'Title of document' %>
    </div>
    <div class="col-sm-4">
      <%= f.file_field :document, class: 'form-control form-control-sm' %>
    </div>
    <div class="col-sm-2">
      <% unless f.object.document.url.nil? %>
        <%= link_to 'View', f.object.document.url, target: '_blank' %>
      <% end %>
    </div>
    <div class="col-sm-2">
      <%= link_to_remove_association f, class: 'btn btn-sm btn-block btn-light' do %>
        REMOVE
      <% end %>
    </div>
  </div>
  <br>
</div>