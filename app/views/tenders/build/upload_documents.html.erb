<%= render 'tender_errors' %>

<div class="hello">
  <div class="px-4 mb-2">Required documents</div>

  <ul class="list-group mb-5" id="required-document-uploads-container">
    <% setup_tender(@tender).required_document_uploads.each do |rdu| %>
      <li class="list-group-item">
        <required-document-uploader
          :required_document_upload="<%= rdu.to_json(
                                             include: :required_document
                                         ) %>"
        ></required-document-uploader>
      </li>
    <% end %>
  </ul>

  <div class="px-4 mb-2">Add other documents</div>

  <other-documents-uploader
    save-url="<%= tender_other_document_uploads_path(@tender) %>"
    :tender="<%= @tender.to_json(include: :other_document_uploads) %>"/>
</div>