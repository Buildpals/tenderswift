<div class="container">
  <div class="row">
    <div class="col-lg-9 mx-auto">
      <div class="tab-content mt-4">

        <%= form_with model: @tender,
                      scope: :tender,
                      url: wizard_path,
                      method: :put,
                      id: 'document-upload-form' do |form| %>

          <% if @tender.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @tender.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <p class="font-weight-bold">Upload required documents</p>
          <hr>

          <div id="required-documents" class="mb-5">
            <%= form.fields_for :required_document_uploads do |rdu| %>

              <%= rdu.hidden_field :required_document_id,
                                   value: rdu.object.required_document_id %>

              <% if rdu.object.document? %>

                <div class="form-row mb-2">
                  <div class="col-sm-6">
                    <%= rdu.object
                        .required_document.title %>
                  </div>

                  <div class="col-sm-4">
                    <%= link_to 'View file',
                                rdu.object.document.url,
                                target: '_blank',
                                class: 'px-3' %>
                  </div>

                  <div class="col-sm-2">
                    <%= link_to_remove_association(
                            form,
                            class: 'btn close float-none') do %>
                      <span aria-hidden="true">&times;</span>
                    <% end %>
                  </div>
                </div>

              <% else %>

                <div class="form-row mb-2">
                  <div class="col-sm-6">
                    <%= rdu.object.required_document.title %>
                  </div>

                  <div class="col-sm-4">
                    <%= rdu.file_field(
                            :document,
                            class: 'form-control-file form-control-sm'
                        ) %>
                  </div>

                  <div class="col-sm-2">
                    <%= form.submit 'Add', class: 'btn btn-sm btn-primary' %>
                  </div>
                </div>

              <% end %>

            <% end %>
          </div>

          <p class="font-weight-bold">Add other documents</p>
          <hr>

          <div id="other-documents" class="nested-forms">
            <%= form.fields_for :other_document_uploads do |odu| %>
              <%= render 'other_document_upload_fields',
                         f: odu %>
            <% end %>
          </div>


          <%= link_to_add_association(
                  'Add another document',
                  form, :other_document_uploads,
                  class: 'btn btn-sm btn-block btn-primary mt-3',
                  data: {
                      'association-insertion-node': '#other-documents',
                      'association-insertion-method': 'after'
                  }) %>


          <%= form.submit 'Submit',
                          class: 'btn btn-block btn-sm btn-secondary text-capitalize
                          d-none d-sm-none d-md-none d-lg-block d-xl-block',
                          data: {
                              confirm: 'You cannot edit this tender after ' \
                              'submitting it. Are you sure you you want to ' \
                              'publish this tender?'
                          } %>

        <% end %>

      </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $('#other-documents').on('cocoon:after-remove', function (e, insertedItem) {
    $('#document-upload-form').trigger('submit.rails')
  })
</script>