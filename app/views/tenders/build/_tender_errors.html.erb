<div id="tender-errors">
  <% if @tender.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= pluralize(@tender.errors.count, "error") %>
      prohibited this request for tender from being saved:

      <ul>
        <% @tender.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>