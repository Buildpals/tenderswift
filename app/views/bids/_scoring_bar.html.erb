<%= form_with model: @tender,
              scope: :tender,
              url: score_bid_path(@tender),
              method: :patch,
              local: true,
              id: 'tender-scoring-form' do |form| %>
  <div class="input-group input-group-sm">
    <%= form.text_field :score,
                        class: 'form-control',
                        id: :tender_score,
                        placeholder: 'Score' %>
    <div class="input-group-append">
      <%= button_tag 'Save',
                     type: 'submit',
                     class: 'btn btn-accent' %>
    </div>
  </div>
<% end %>
