<%= form_with model: @tender,
              scope: :tender,
              url: rate_bid_path(@tender),
              method: :patch,
              local: true,
              id: '@tender-rating-form' do |form| %>
  <div class="row">
    <%= form.text_field :rating,
                        class: 'form-control form-control-sm col-md-4',
                        id: :tender_rating,
                        placeholder: 'Rating' %>
    <%= form.submit 'Save',
                    class: 'btn btn-sm btn-secondary col-md-3' %>
  </div>
<% end %>