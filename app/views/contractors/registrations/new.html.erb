<div class="container">
  <div class="row">
    <div class="col-lg-4 mx-auto mt-2">
      <div class="text-center mb-4">
        <h2>Sign up as a contractor</h2>
        or
        <%= link_to 'sign in to your account',
                    new_session_path(resource_name) %>
      </div>

      <%= form_for(resource,
                   as: resource_name,
                   url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


        <div class="form-group">
          <%= f.text_field :full_name,
                           placeholder: 'Your name',
                           autofocus: true,
                           class: 'form-control',
                           required: true %>
        </div>

        <div class="form-group">
          <%= f.email_field :email,
                            placeholder: 'Email address',
                            class: 'form-control',
                            id: 'email-registration',
                            required: true %>
        </div>

        <div class="form-group">
          <input type="tel"
                 name="phone"
                 id="phone_number_input"
                 value="<%= resource.phone_number %>"
                 placeholder="Phone number"
                 autocomplete="on"
                 required
                 class="form-control">
          <%= f.hidden_field :phone_number %>
        </div>

        <div class="form-group my-4">
          <%= f.text_field :company_name,
                           placeholder: :company_name,
                           autocomplete: "on",
                           class: 'form-control',
                           required: true %>
        </div>

        <div class="form-group my-4">
          <%= f.label :company_logo %>
          <%= f.file_field :company_logo,
                           class: 'form-control-file',
                           required: true %>
        </div>

        <br>

        <div class="form-group">
          <%= f.password_field :password,
                               placeholder: :password,
                               autocomplete: "off",
                               class: 'form-control',
                               required: true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation,
                               placeholder: :password_confirmation,
                               autocomplete: "off",
                               class: 'form-control',
                               required: true %>
        </div>

        <br>

        <div class="actions">
          <%= f.submit "Sign up",
                       class: 'btn btn-secondary btn-block',
                       data: { disable_with: "Signing Up" } %>
        </div>
      <% end %>

    </div>
  </div>
</div>