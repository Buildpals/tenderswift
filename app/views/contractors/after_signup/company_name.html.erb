<div class="d-flex h-100 w-100 justify-content-center align-items-center">
  <%= form_with model: current_contractor,
                url: contractors_update_company_name_path,
                scope: :contractor,
                id: 'contractor-form' do |form| %>

    <div class="form-group">
      <%= form.label :company_name %>
      <small id="companyNameHelp" class="form-text text-muted">
        Enter the mobile money number we should take the money from above.
        It should be exactly 10 digits long, in the format 054xxxxxxx.
      </small>
      <%= form.telephone_field :company_name,
                               id: :contractor_company_name,
                               placeholder: 'Sanford and Sons',
                               class: 'form-control form-control-sm',
                               required: true %>
    </div>

    <%= form.submit 'Next', class: 'btn btn-secondary btn-block mt-5' %>

  <% end %>
</div>
