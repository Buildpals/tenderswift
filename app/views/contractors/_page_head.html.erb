<% if content_for?(:breadcrumbs) || content_for?(:breadcrumbs) || content_for?(:nav_tabs) %>
  <div class="d-lg-none">
    <nav class="scrollmenu bg-dark">
      <%= yield :nav_tabs %>
    </nav>
  </div>

  <div class="d-none d-lg-block">
    <div class="w-100 bg-light text-dark nav-tabs">
      <div class="container pt-3">
        <div class="row">
          <div class="col-lg-12 mx-auto">

            <% if content_for? :breadcrumbs %>
              <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb top-nav-breadcrumb">

                  <li class="mt-1 mr-2">
                    <svg aria-hidden="true" style="color: #959da5 !important;" height="16" version="1.1" viewBox="0 0 12 16" width="12">
                      <path fill-rule="evenodd" d="M4 9H3V8h1v1zm0-3H3v1h1V6zm0-2H3v1h1V4zm0-2H3v1h1V2zm8-1v12c0 .55-.45 1-1 1H6v2l-1.5-1.5L3 16v-2H1c-.55 0-1-.45-1-1V1c0-.55.45-1 1-1h10c.55 0 1 .45 1 1zm-1 10H1v2h2v-1h3v1h5v-2zm0-10H2v9h9V1z"></path>
                    </svg>
                  </li>

                  <%= yield :breadcrumbs %>

                </ol>
              </nav>
            <% end %>

            <% if content_for?(:nav_tabs) %>
              <nav class="nav justify-content-center">
                <%= yield :nav_tabs %>
              </nav>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<style>
  nav.scrollmenu {
    background-color: #333;
    overflow: auto;
    white-space: nowrap;
  }

  nav.scrollmenu a {
    display: inline-block;
    color: rgba(255, 255, 255, 0.75);
    text-align: center;
    padding: 14px;
    text-decoration: none;
  }

  nav.scrollmenu a.active {
    font-weight: 600;
    color: #fff;
  }
</style>