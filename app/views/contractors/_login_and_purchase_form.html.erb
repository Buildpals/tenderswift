<%= form_with scope: :login,
              url: login_and_purchase_path(@request_for_tender),
              id: 'login-and-purchase-form',
              local: true do |form| %>
  <!--  TODO: Submit this form via ajax and display errors using JS-->

  <% if @contractor.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @contractor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email,
                        id: :login_email,
                        class: 'form-control form-control-sm',
                        required: true %>
  </div>

  <div class="form-group mb-5">
    <%= form.label :password %>
    <%= form.password_field :password,
                           id: :login_password,
                           class: 'form-control form-control-sm',
                           required: true %>
  </div>

  <strong>Payment Information</strong>
  <hr>

  <div class="form-group">
    <%= form.label :network_code, 'Mode of payment' %>
    <%= form.select :network_code,
                   options_for_select({
                                          'Airtel Money': 'AIR',
                                          'MTN Mobile Money': 'MTN',
                                          'Tigo Cash': 'TIG',
                                          'Vodafone Cash': 'VOD'
                                      }),
                   {},
                   {
                       selected: 'Airtel Money',
                       id: :login_network_code,
                       class: 'form-control form-control-sm network-select',
                       required: true
                   } %>
  </div>

  <div class="form-group">
    <%= form.label :customer_number, 'Mobile money number' %>
    <%= form.telephone_field :customer_number,
                            id: :login_customer_number,
                            class: 'form-control form-control-sm',
                            required: true %>
  </div>

  <div class="form-group voucher-code">
    <%= form.label :vodafone_voucher_code, 'Voucher code' %>
    <%= form.text_field :vodafone_voucher_code,
                       id: :login_vodafone_voucher_code,
                       class: 'form-control form-control-sm',
                       required: true %>
  </div>

  <%= form.submit 'Log in and Purchase', class: 'btn btn-secondary btn-block mt-5' %>

<% end %>