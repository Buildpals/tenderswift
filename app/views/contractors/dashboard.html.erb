<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active" aria-current="page">
    Home
  </li>
<% end %>

<div class="row">
  <div class="col-lg-4 pt-4" id="invitations-to-tender">
    <div class="ml-4 mb-2 text-center">
      <small style="color: rgb(169, 68, 66); font-size: 100%;">New Invitations To Tender</small>
    </div>
    <div class="card mb-4">
      <div class="list-group list-group-flush">
        <% @invitations_to_tender.each do |request_for_tender| %>
          <a href="<%= purchase_tender_path request_for_tender %>"
             class="list-group-item list-group-item-action
                        flex-column align-items-start" %>
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">
                <%= request_for_tender.project_name %>
              </h5>
              <small class="text-muted">
                    <span class="badge badge-pill badge-secondary">
                      <%= time_to_deadline request_for_tender %>
                    </span>
              </small>
            </div>
            <small class="text-muted">
              <%= project_location request_for_tender %>
            </small>
          </a>
        <% end %>
      </div>
    </div>
  </div>


  <div class="col-lg-4 pt-4" id="purchased-tenders">
    <div class="ml-4 mb-2 text-center">
      <small style="font-size: 100%;">Purchased Tenders</small>
    </div>
    <div class="card">
      <div class="list-group list-group-flush">
        <% @purchased_tenders.each do |tender|%>
          <a href="<%= tender_build_path(tender, :general_information) %>"
             class="list-group-item list-group-item-action
                        flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">
                <%= tender.project_name %>
              </h5>
              <small class="text-muted">
                    <span class="badge badge-pill badge-secondary">
                      <%= time_to_deadline tender %>
                    </span>
              </small>
            </div>
            <small class="text-muted">
              <%= project_location tender %>
            </small>
          </a>
        <% end %>
      </div>
    </div>
  </div>


  <div class="col-lg-4 pt-4" id="submitted-tenders">
    <div class="ml-4 mb-2 text-center">
      <small style="color:rgb(49, 183, 51); font-size: 100%;">Submitted Tenders</small>
    </div>
    <div class="card">
      <% @submitted_tenders.each do |tender| %>
        <div class="list-group list-group-flush">
          <a href="<%= tender_view_path tender, :general_information %>"
             class="list-group-item list-group-item-action
                        flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">
                <%= tender.project_name %>
              </h5>
              <small class="text-muted">
                      <span class="badge badge-pill badge-secondary">
                        <%= time_to_deadline tender %>
                      </span>
              </small>
            </div>
            <small class="text-muted">
              <%= project_location tender %>
            </small>
          </a>
        </div>
      <% end %>
    </div>
  </div>

</div>
