<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <div class="tab-content mt-4">

        <%= form_with model: @participant,
                      scope: :participant,
                      method: :post,
                      url: participants_upload_required_documents_path(@participant),
                      local: true,
                      id: 'required-document-upload-form' do |form| %>

          <div class="card-body">
            <table class="table">

              <tbody>
              <%= form.fields_for :required_document_uploads do |required_document_upload| %>
                <tr>

                  <td>
                    <%= required_document_upload.object.required_document.title  %>
                  </td>

                  <% if required_document_upload.object.document? %>
                    <td>
                      <%= link_to 'View', required_document_upload.object.document.url, target: '_blank' %>
                    </td>
                    <td>
                      <%= required_document_upload.file_field :document, class: 'form-control-file form-control-sm mb-2', data: {'save-on-change': true} %>
                    </td>
                  <% else %>
                    <td></td>
                    <td>
                      <%= required_document_upload.file_field :document, class: 'form-control-file form-control-sm mb-2', data: {'save-on-change': true} %>
                    </td>
                  <% end %>

                </tr>
                <% end %>
                <% if @participant.request_for_tender.required_documents.size > 7 %>
                  <%= form.submit 'Save', class: 'pull-right btn btn-success' %>
                <% end %>
              </tbody>
            </table>
            <%= form.submit 'Save', class: 'pull-right btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('.submit-your-bid').attr('disabled', 'disabled');
</script>