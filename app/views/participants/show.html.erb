<div class="container" id="app">
  <div class="row">

    <div class="col-lg-9 mx-auto pt-4">
      <%= render 'layouts/notice' %>
    </div>

    <div class="col-lg-9 mx-auto">

      <%= render 'project_summary' %>

      <%= render 'project_description' %>

    </div>

    <% unless @participant.status.in? %w(participating bid_made) %>
        <div class="col-lg-9 mx-auto">
          <div class="alert alert-success alert-dismissible fade show mt-1" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            Click on the <strong>Accept project</strong> button above to start composing your bid.
          </div>
        </div>
    <% end %>


    <% if @participant.status.in? %w(participating bid_made) %>

        <div class="col-lg-9 mx-auto">
          <%= render 'requirements_form' %>
        </div>

        <div class="col-lg-9 mx-auto">
          <%= render 'bill_of_quantities' %>
        </div>

    <% end %>


    <div class="col-lg-9 mx-auto">
      <%= render 'message_board' %>
    </div>

  </div>

</div>

