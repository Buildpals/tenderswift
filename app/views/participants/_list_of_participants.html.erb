<div class="card mb-4">
  <div class="card-header">
    Participants
  </div>
  <div class="card-body">
    <p class="mb-1">
      <table id="list-participant-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
              <tr>
                  <th>Company Name</th>
                  <th>Email</th>
                  <th>Phone Number</th>
              </tr>
          </thead>
          <tbody>
            <% @request.participants.each do |participant| %>
              <tr>
                  <td><%= participant.company_name %></td>
                  <td><%= participant.email %></td>
                  <td><%= participant.phone_number %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </p>
  </div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>