<div class="card mb-4">
  <div class="card-header">
    Requirements
  </div>
  <% @participant.request_for_tender.questions.each do |question| %>
      <div class="card-body">
        <h4 class="card-title">
          <%= question.title %>
        </h4>
        <h6 class="card-subtitle mb-2 text-muted">
          <%= question.description %>
        </h6>
        <p class="card-text">
          <strong>Answer:</strong>
          <%= @participant.answer_box_for(question).answer %>
        </p>

        <% if @participant.answer_box_for(question).answer_documents.count > 0 %>
            Documents: &nbsp;
            <% @participant.answer_box_for(question).answer_documents.each do |answer_document| %>
                <%= link_to answer_document.document.file.filename, answer_document.document.url, target: '_blank',
                            class: 'card-link' %>
            <% end %>
        <% end %>
      </div>

  <% end %>
</div>