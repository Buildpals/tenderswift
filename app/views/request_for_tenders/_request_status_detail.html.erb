<div class="card mb-4">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs" role="tablist">
      <li role="presentation" class="nav-item">
        <a href="#sales" class="nav-link active" aria-controls="saleoftenders" role="tab" data-toggle="tab">Sales</a>
      </li>
      <li role="presentation" class="nav-item">
        <a href="#bids" class="nav-link" aria-controls="home" role="tab" data-toggle="tab">Bids</a>
      </li>
    </ul>
  </div>

  <div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="sales">
      <%= render 'sales_information' %>
    </div>

    <div role="tabpanel" class="tab-pane" id="bids">
      <div class="card-body">
        <% if @request.deadline_over? %>
            <%= render 'bids' %>
        <% else %>
            <p>
              In order to comply with the standards of tender fairness,
              bids will only be shown when the request deadline is reached.
            </p>

            <p class="text-center">
              <%= @request.time_left %> left to request deadline.
            </p>
        <% end %>
      </div>
    </div>

  </div>
</div>