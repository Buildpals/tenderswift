<% unless @request.winner.nil? %>
  <div class="d-flex w-100 justify-content-between mb-2 form-inline">
    <h5>Winner of this request for tender</h5>
  </div>

    <table class="table table-striped table-hover">
    <thead class="thead-light">
    <tr>
      <th>Company</th>
      <th>Bid</th>
      <th>Difference</th>
      <th>Bid time</th>
      <th>Rating</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
        <tr>
          <td>
            <span data-toggle="tooltip" data-placement="top" title="<%= @request.winner.email %>">
                <%= @request.winner.company_name %>
            </span>
          </td>
          <td>
            <%= @request.contract_sum_currency %> <%= @winner.bid %>
          </td>
          <td>
            <%= @request.contract_sum_currency %> <%= @winner.bid_difference %>
            <small>(<%= @winner.bid_difference_as_percentage %>)</small>
          </td>
          <td><small><%= @winner.bid_submission_time.to_formatted_s(:short) %></small></td>
          <td>
            <span class="text-danger">Winner</span>
          </td>
          <td>
            <%= link_to 'View bid', participant_boq_path(@request.winner) %>
          </td>
    </tbody>
  </table>
<% end %>