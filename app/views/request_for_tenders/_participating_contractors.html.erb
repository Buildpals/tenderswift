    <button class="btn btn-sm btn-light">Invite more contractors</button>
    <button class="btn btn-sm btn-light">Add a bid manually</button>
  </div>
</div>


<div class="card-body">
  <h4 class="card-title text-danger">
    Bid Made
    <small>
      <span class="badge badge-pill badge-danger">
        <%= @request.participants.bid_made.count %>
    </span>
    </small>
  </h4>

  <ul class="list-group">
    <% @request.participants.bid_made.each do |participant| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-md-5">
              Morgan Supply Star Ltd.
              <br>

              <small>
                <span class="fa fa-user"></span>
                Morgan Cooper
              </small>
            </div>
            <div class="col-md-4">
              Aug 14, 2017 07:29
            </div>
            <div class="col-md-2">
              <div class="dropdown">
                <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="bid_actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Actions
                </button>
                <div class="dropdown-menu" aria-labelledby="bid_actions">
                  <button class="dropdown-item" type="button">View bid</button>
                  <button class="dropdown-item" type="button">Enter bid manually</button>
                  <button class="dropdown-item" type="button">Remove</button>
                </div>
              </div>
            </div>
            <div class="col-md-1">
              <button class="btn btn-sm btn-light">
                <i class="fa fa-envelope"></i>
              </button>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>


