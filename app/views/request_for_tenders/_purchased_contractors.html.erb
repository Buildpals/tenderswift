<div class="card-header text-warning" role="tab" id="purchasedContractors">
  <h5 class="mb-0">
    <a class="collapsed text-warning" data-toggle="collapse" href="#collapsePurchasedContractors" aria-expanded="false" aria-controls="collapsePurchasedContractors">
      Purchased
      <small>
      <span class="badge badge-pill badge-warning">
        <%= @request_for_tender.tenders.purchased.count %>
     </span>
      </small>
    </a>
  </h5>
</div>
<div id="collapsePurchasedContractors" class="collapse" role="tabpanel" aria-labelledby="purchasedContractors" data-parent="#accordion">
  <ul class="list-group list-group-flush">
    <% @request_for_tender.tenders.purchased.each do |tender| %>
      <li class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
          <div class="mb-1"><%= tender.contractors_company_name %></div>
        </div>
        <small class="text-muted">
          <a href="mailto:<%= tender.project_owners_email %>?subject=<%= "re: Invitation to Tender for #{tender.project_name}" %>"
             target="_blank">
            <span class="fa fa-user"></span>
            <%= tender.contractors_email %>
          </a>
          (<%= tender.contractors_phone_number %>)
          <br>
          Purchased on
          <%= tender.purchase_time.to_formatted_s(:short) %>
          for
          <strong>GHâ‚µ <%= tender.amount %></strong>
        </small>
      </li>
    <% end %>
  </ul>
</div>
