<%= form_with model: @request_for_tender,
              scope: :request_for_tender,
              url: wizard_path,
              method: :put,
              id: 'request-form' do |form| %>

  <%= render 'request_for_tenders/payments_form', form: form %>

  <hr>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to 'Previous', previous_wizard_path %>

    <%= form.submit 'Save and continue', class: 'btn btn-secondary' %>
  </div>
<% end %>