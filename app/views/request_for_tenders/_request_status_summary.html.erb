<div class="card mb-4">
  <div class="card-header d-flex w-100 justify-content-between">
    <h5><%= @request.project_name %></h5>

    <small class="text-muted">
      <span class="badge badge-pill badge-secondary"><%= @request.private? ? 'private' : 'public' %> tender</span>
    </small>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-primary d-flex w-100 justify-content-end">
      <a href="#card-information" data-turbolinks="false" class="btn btn-sm btn-info">View project information</a>
    </li>
    <li class="list-group-item">
      <div class="d-flex w-100 justify-content-between py-2">
        <div class="mx-3">
          <div class="font-weight-bold text-muted"><%= @request.private? ? 'Invited' : 'Visited' %></div>
          <%= @request.private? ? @request.participants.count : @request.portal_visits %>
        </div>
        <div class="mx-3">
          <div class="font-weight-bold text-muted">Purchased</div>
          <%= @request.number_of_tender_purchases %>
        </div>
        <div class="mx-3">
          <div class="font-weight-bold text-muted">Submitted</div>
          <%= @request.participants.submitted.count %>
        </div>
        <div class="mr-auto">
        </div>
        <div class="mx-3">
          <div class="font-weight-bold text-muted">Published</div>
          <%= @request.published_time.to_formatted_s(:short) %>
        </div>
        <div class="mx-3">
            <% if @request.deadline_over? %>
              <div class="font-weight-bold text-muted">Ended</div>
              <%= @request.time_left %> ago
              <small>(<%= @request.deadline.to_formatted_s(:short) %>)</small>
            <% else %>
              <div class="font-weight-bold text-muted">Ends on</div>
              <%= @request.time_left %>
              <small>(<%= @request.deadline.to_formatted_s(:short) %>)</small>
            <% end %>
        </div>
      </div>
    </li>
  </ul>
</div>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>