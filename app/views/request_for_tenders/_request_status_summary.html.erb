<div class="card mb-4">
  <div class="card-header">
    <%= @request.project_name %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-info">
      <div class="col-sm-12 request-controls" style="padding: 5px;">
        <%= link_to 'Edit request', edit_request_for_tender_path(@request), class: 'btn btn-sm btn-light' %>
        <%= link_to 'Extend deadline', edit_request_for_tender_path(@request), class: 'btn btn-sm btn-light' %>
        <%= link_to 'Invite more contractors', edit_request_for_tender_path(@request), class: 'btn btn-sm btn-light' %>
        <div class="dropdown float-right">
          <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="request_actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Actions
          </button>
          <ul class="dropdown-menu" aria-labelledby="request_actions">
            <button class="dropdown-item" type="button">Open report</button>
            <button class="dropdown-item" type="button">Copy</button>
            <button class="dropdown-item" type="button">Move to another folder</button>
            <button class="dropdown-item" type="button">Cancel request</button>
          </ul>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row" style="padding-top: 15px;">
        <div class="col-sm-8">
          <div class="row">
            <div class="col-sm-3"><strong class="text-muted">Bids</strong></div>
            <div class="col-sm-3"><strong class="text-muted">Pending</strong></div>
            <div class="col-sm-3"><strong class="text-muted">Read</strong></div>
            <div class="col-sm-3"><strong class="text-muted">Time left</strong></div>
            <div class="col-sm-3"><%= @request.participants.bid_made.count %></div>
            <div class="col-sm-3"><%= @request.participants.not_read.count %>/<%= @request.participants.count %></div>
            <div class="col-sm-3"><%= @request.participants.read.count %>/<%= @request.participants.count %></div>
            <div class="col-sm-3"><%= @request.time_left %></div>
          </div>
        </div>
        <div class="col-sm-4 text-center">
          <a href='' class='btn btn-lg btn-success'>Compare bids</a>
        </div>
      </div>
    </li>
  </ul>
</div>