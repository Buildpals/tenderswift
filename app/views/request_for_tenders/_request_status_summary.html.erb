<div class="card mb-4">
  <div class="card-header d-flex w-100 justify-content-between">
    <h5><%= @request_for_tender.project_name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item small">
      <% if @request_for_tender.private? %>
        <strong>Private tender</strong>
        (all tenders have to be invited via email here)
      <% else %>
        <strong>Public web address</strong>
        <%= link_to purchase_tender_url(@request_for_tender), purchase_tender_url(@request_for_tender), target: '_blank' %>
      <% end %>
    </li>

    <li class="list-group-item bg-primary d-flex w-100 justify-content-end">
      <a href="#card-information" data-turbolinks="false" class="btn btn-sm btn-info">View project information</a>
    </li>

    <li class="list-group-item">
      <div class="d-flex w-100 justify-content-between py-2">
        <div class="mx-2">
          <div class="font-weight-bold text-muted"><%= @request_for_tender.private? ? 'Invited' : 'Visited' %></div>
          <%= @request_for_tender.private? ? @request_for_tender.tenders.count : @request_for_tender.portal_visits %>
        </div>
        <div class="mx-2">
          <div class="font-weight-bold text-muted">Purchased</div>
          <%= @request_for_tender.number_of_tender_purchases %>
        </div>
        <div class="mx-3">
          <div class="font-weight-bold text-muted">Submitted</div>
          <%= @request_for_tender.tenders.submitted.count %>
        </div>
        <div class="mr-auto"></div>
        <div class="mx-3">
          <div class="font-weight-bold text-muted">Published</div>
          <%= @request_for_tender.published_time.to_formatted_s(:short) %>
        </div>
        <div class="mx-3">
            <% if @request_for_tender.deadline_over? %>
              <div class="font-weight-bold text-muted">Ended</div>
              <%= time_to_deadline(@request_for_tender.deadline) %> ago
              <small>(<%= @request_for_tender.deadline.to_formatted_s(:short) %>)</small>
            <% else %>
              <div class="font-weight-bold text-muted">Ends on</div>
              <%= time_to_deadline(@request_for_tender.deadline) %>
              <small>(<%= @request_for_tender.deadline.to_formatted_s(:short) %>)</small>
            <% end %>
        </div>
      </div>
    </li>
  </ul>
</div>