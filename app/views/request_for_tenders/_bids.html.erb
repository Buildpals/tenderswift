<div class="d-flex w-100 justify-content-between mb-2 form-inline">
  <h5>Bids</h5>
  <div class="form-group">
    <label for="currency">Convert totals to &nbsp;</label>
    <select class="form-control form-control-sm" name="currency" id="currency">
      <option value="USD">USD - United States dollar</option>
      <option value="GHS">GHS - Ghanaian cedi</option>
    </select>
  </div>
</div>

<table class="table table-striped table-sm" style="border: 1px solid #e3e3e3">
  <thead>
  <tr>
    <td>Company</td>
    <td>Total</td>
    <td>Difference</td>
    <td>Bid time</td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @request.participants.bid_made.each do |participant| %>
      <tr>
        <td><%= participant.email %></td>
        <td>$<%= participant.bid %></td>
        <td></td>
        <td><small><%= participant.bid_submission_time.to_formatted_s(:short) %></small></td>
        <td>
          <%= link_to 'View bid', participant_boq_path(participant), class: 'btn btn-sm btn-light'%>
          <button class="btn btn-sm btn-light">
            <span class="fa fa-envelope"></span>
          </button>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>