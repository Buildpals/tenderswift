<table class="table table-striped table-sm">
  <thead class="thead-default">
  <tr>
    <th>Company</th>
    <th>Total</th>
    <th>Difference</th>
    <th>Bid time</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @request.participants.bid_made.each do |participant| %>
      <tr>
        <td><%= participant.email %></td>
        <td>$<%= participant.bid %></td>
        <td></td>
        <td><small><%= participant.bid_submission_time.to_formatted_s(:short) %></small></td>
        <td class="p-1">
          <%= link_to 'View bid', participant_boq_path(participant), class: 'btn btn-sm btn-light'%>
          <a href="mailto:<%= participant.email %>?subject=<%= "re: Invitation to Tender for #{participant.project_name}" %>"
             target="_blank"
             class="btn btn-sm btn-light">
            <span class="fa fa-envelope text-secondary"></span>
          </a>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>