<% if deadline_over? @request_for_tender %>
  <div class="d-flex w-100 justify-content-end mb-2">
    <%= link_to 'Compare Rates', compare_boq_path(@request_for_tender), target: '_blank',
                class: 'btn btn-sm btn-secondary' %>
  </div>

  <tender-figures-table
    :tenders="<%= @request_for_tender.tenders_including_mine.to_json %>"
    :list_of_items="<%= @request_for_tender.list_of_items.to_json %>">
  </tender-figures-table>
<% else %>
  <div class="d-flex w-100 justify-content-end mb-2">
    <div data-toggle="tooltip" data-placement="bottom"
         data-html="true"
         data-title="<p>In order to comply with the standards of tender fairness,
                 bids will only be shown when the request deadline is reached.<p>
                <p class='text-center request-countdown'><%= time_to_deadline @request_for_tender %> left to request deadline.</p>">

      <button class="btn btn-secondary disabled" type="button">
        Compare Rates
      </button>
    </div>
  </div>
<% end %>