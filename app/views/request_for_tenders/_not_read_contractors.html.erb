<div class="card-header" role="tab" id="headingNotRead">
  <h5 class="mb-0">
    <a data-toggle="collapse" href="#collapseNotRead" aria-expanded="true" aria-controls="collapseNotRead" class="text-danger">
      Not Read
      <small>
      <span class="badge badge-pill badge-danger">
        <%= @request.participants.not_read_list.count %>
      </span>
      </small>
    </a>
  </h5>
</div>
<div id="collapseNotRead" class="collapse" role="tabpanel" aria-labelledby="headingNotRead" data-parent="#accordion">
  <div class="card-body">
    <ul class="list-group">
      <% @request.participants.not_read_list.each do |participant| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-5">
                <%= participant.name %>
                <br>
                <small>
                  <span class="fa fa-user"></span>
                  <%= participant.email %>
                  (<%= participant.phone_number %>)
                </small>
              </div>
              <div class="col-md-4">
              </div>
              <div class="col-md-2">
                <div class="dropdown">
                  <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="bid_actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Actions
                  </button>
                  <div class="dropdown-menu" aria-labelledby="bid_actions">
                    <button class="dropdown-item" type="button">Change email</button>
                    <button class="dropdown-item" type="button">Enter bid manually</button>
                    <button class="dropdown-item" type="button">Remove</button>
                  </div>
                </div>
              </div>
              <div class="col-md-1">
                <a href="mailto:<%= participant.project_owners_email %>?subject=<%= "re: Invitation to Tender for #{participant.project_name}" %>"
                   target="_blank"
                   class="btn btn-sm btn-light">
                  <span class="fa fa-envelope text-secondary"></span>
                </a>
              </div>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
</div>
