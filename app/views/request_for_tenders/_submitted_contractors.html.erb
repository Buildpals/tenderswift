<div class="card-header" role="tab" id="headingBidMade">
  <h5 class="mb-0">
    <a class="collapsed text-success" data-toggle="collapse" href="#collapseBidMade" aria-expanded="false" aria-controls="collapseBidMade">
      Submitted
      <small>
        <span class="badge badge-pill badge-success">
          <%= @request_for_tender.participants.submitted.count %>
        </span>
      </small>
    </a>
  </h5>
</div>
<div id="collapseBidMade" class="collapse" role="tabpanel" aria-labelledby="headingBidMade" data-parent="#accordion">
  <ul class="list-group list-group-flush">
    <% @request_for_tender.participants.submitted.each do |participant| %>
      <li class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
          <div class="mb-1"><%= participant.name %></div>
        </div>
        <small class="text-muted">
          <a href="mailto:<%= participant.project_owners_email %>?subject=<%= "re: Invitation to Tender for #{participant.project_name}" %>"
             target="_blank">
            <span class="fa fa-user"></span>
            <%= participant.email %>
          </a>
          (<%= participant.phone_number %>)
        </small>
        <div class="w-100 d-flex justify-content-between align-items-baseline">
          <small>Submitted on <%= participant.purchase_time.to_formatted_s(:short) %></small>

          <% if participant.submitted? %>
            <% if @request_for_tender.deadline_over? %>
              <%= link_to 'View bid', bid_required_documents_path(participant), class: 'card-link' %>
            <% else %>
              <div data-toggle="tooltip" data-placement="bottom"
                   data-html="true"
                   data-title="<p>In order to comply with the standards of tender fairness,
                 bids will only be shown when the request deadline is reached.<p>
                <p class='text-center request-countdown'><%= @request_for_tender.time_left %> left to request deadline.</p>">
                <button class="card-link disabled" type="button">View bid</button>
              </div>
            <% end %>
          <% else %>
            Waiting for bid
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>