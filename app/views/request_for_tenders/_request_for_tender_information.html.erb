<div class="card" id="card-information">
  <div class="card-header">
    Project Information
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @request_for_tender.project_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">
      <%= @request_for_tender.private? ? 'Private' : 'Public' %> tender
      <br>
      <%= @request_for_tender.published_at.to_formatted_s(:long) %>
      -
      <%= @request_for_tender.deadline.to_formatted_s(:long) %>
    </h6>
    <p class="card-text">
      <%= simple_format @request_for_tender.description %>
    </p>

    <div class="row my-3">
      <div class="col-md-4">
        <strong>Contract class</strong>
        <br>
        <%= contract_class @request_for_tender %>
      </div>
      <div class="col-md-4">
        <strong>Location</strong>
        <br>
        <%= project_location @request_for_tender %>
      </div>
      <div class="col-md-4">
        <strong>Project currency</strong>
        <br>
        <%= project_currency @request_for_tender %>
      </div>
    </div>
  </div>


  <div class="card-body">
    <strong class="text-center">Tender Instructions</strong>
    <hr>
    <%= simple_format @request_for_tender.tender_instructions,
                      { class: 'formatted_content trix-content' },
                      {wrapper_tag: 'div' } %>
  </div>

  <div class="card-body">
    <strong class="text-center">Required Documents</strong>
    <hr>
    <p class="card-text">
      All participating contractors are expected to provide the following documents with this tender:
    <ol>
      <% @request_for_tender.required_documents.each do |required_document| %>
        <li> <%= required_document.title %> </li>
      <% end %>
    </ol>
    </p>
  </div>


  <div class="card-body">
    <strong class="text-center">Bill Of Quantities</strong>
    <hr>
    <div class="hello">
      <rates-uploader
        :tender_id="<%= @request_for_tender.id %>"
        :list_of_items="<%= @request_for_tender.list_of_items.to_json %>"
        :list_of_rates="<%= @request_for_tender.list_of_rates.to_json %>">
      </rates-uploader>
    </div>
  </div>

</div>