<p id="notice"><%= notice %></p>

<h1>Tender Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Customer number</th>
      <th>Amount</th>
      <th>Transaction</th>
      <th>Voucher code</th>
      <th>Network code</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tender_transactions.each do |tender_transaction| %>
      <tr>
        <td><%= tender_transaction.customer_number %></td>
        <td><%= tender_transaction.amount %></td>
        <td><%= tender_transaction.transaction_id %></td>
        <td><%= tender_transaction.voucher_code %></td>
        <td><%= tender_transaction.network_code %></td>
        <td><%= tender_transaction.status %></td>
        <td><%= link_to 'Show', tender_transaction %></td>
        <td><%= link_to 'Edit', edit_tender_transaction_path(tender_transaction) %></td>
        <td><%= link_to 'Destroy', tender_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

