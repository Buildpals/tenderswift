<% content_for :title do %>
    <%= current_contractor.company_name %>
<% end %>

<!DOCTYPE html>
<html lang="en">

  <%= render 'layouts/head' %>

  <body class="<%= controller_name %> <%= action_name %>">

    <%= render 'contractors/navbar' %>

    <%= render 'layouts/flash_messages' %>

    <div class="content">

      <%= render 'contractors/page_head' %>

      <%= yield %>

    </div>

    <%= render 'contractors/footer' unless action_name == 'boq' %>
  </body>
</html>