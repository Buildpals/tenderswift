<% flash.each do |key, value| %>
  <div class="alert alert-<%= flash_class(key) %> alert-dismissible fade show flash"
       role="alert">
    <%= value %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>