<!DOCTYPE html>
<html lang="en">

<%= render 'layouts/head' %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag 'buildpals-logo-small-inverse.png', style: 'height: 28px; margin-top: 0px;',
                  alt: 'buildpals - connecting contractors to project leads' %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    </ul>
    <% if @required_document_upload %>
      <%= link_to 'Back', bid_required_documents_path(@required_document_upload.participant), class: 'btn btn-outline-warning mr-sm-2 my-sm-0' %>
      <%= form_with(model: @required_document_upload, url: update_bid_url, local: true, class: 'form-inline') do |form| %>
        <%= form.text_field :status, value: 'approved', id: :required_document_upload_id, type: 'hidden' %>
        <%= form.submit 'Approve', class: 'btn btn-outline-success mr-sm-2 my-sm-0' %>
      <% end %>
      <%= form_with(model: @required_document_upload, url: update_bid_url, local: true, class: 'form-inline') do |form| %>
        <%= form.text_field :status, value: 'issue', id: :required_document_upload_id, type: 'hidden' %>
        <%= form.submit 'Mark Issue', class: 'btn btn-outline-danger mr-sm-2 my-sm-0' %>
      <% end %>
    <% else %>
      <%= link_to 'Back', bid_other_documents_path(@participant), class: 'btn btn-outline-warning mr-sm-2 my-sm-0' %>
      <%= form_with(model: @other_document_upload, url: update_other_document_url, local: true, class: 'form-inline') do |form| %>
        <%= form.text_field :status, value: 'approved', id: :required_document_upload_id, type: 'hidden' %>
        <%= form.submit 'Approve', class: 'btn btn-outline-success mr-sm-2 my-sm-0' %>
      <% end %>
      <%= form_with(model: @other_document_upload, url: update_other_document_url, local: true, class: 'form-inline') do |form| %>
        <%= form.text_field :status, value: 'issue', id: :required_document_upload_id, type: 'hidden' %>
        <%= form.submit 'Mark Issue', class: 'btn btn-outline-danger mr-sm-2 my-sm-0' %>
      <% end %>
    <% end %>
  </div>
</nav>
<%= yield %>