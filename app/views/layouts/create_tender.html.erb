<% content_for :breadcrumbs do %>
    <li class="breadcrumb-item">
      <a href="<%= root_path %>">
        Home
      </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= @request_for_tender.project_name %>
    </li>
<% end %>




<!DOCTYPE html>
<html lang="en">

  <%= render 'layouts/head' %>


  <body class="<%= controller_name %> <%= action_name %>">

    <%= render 'quantity_surveyors/navbar' %>

    <%= render 'layouts/flash_messages' %>

    <div class="content">

      <%= render 'quantity_surveyors/page_head' %>

      <div class="container-fluid">
        <div class="row mt-4">

          <div class="col-md-3">
            <nav class="nav nav-pills flex-column">
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_information' %>" href="<%= edit_tender_information_path(@request_for_tender) %>">
                1. General Information
              </a>
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_boq' %>" href="<%= edit_tender_boq_path(@request_for_tender) %>">
                2. Bill Of Quantities
              </a>
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_documents' %>" href="<%= edit_tender_documents_path(@request_for_tender) %>">
                3. Tender Documents
              </a>
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_required_documents' %>" href="<%= edit_tender_required_documents_path(@request_for_tender) %>">
                4. Tender Instructions
              </a>
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_payment_method' %>" href="<%= edit_tender_payment_method_path(@request_for_tender) %>">
                5. Payment Method
              </a>
              <a class="nav-item nav-link <%= 'active' if action_name == 'edit_tender_contractors' %>" href="<%= edit_tender_contractors_path(@request_for_tender) %>">
                6. Distribution
              </a>
             <div class="nav-item nav-link ">
             </div>
            </nav>
          </div>

          <div class="col-md-9">
            <%= yield %>
          </div>

        </div>
      </div>
    </div>

    <%= render 'quantity_surveyors/footer' %>

  </body>
</html>
