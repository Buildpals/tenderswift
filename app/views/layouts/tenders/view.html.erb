<% content_for :title do %>
  <%= @tender.project_name %> - TenderSwift
<% end %>

<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item">
    <a href="<%= contractor_root_path %>">
      Home
    </a>
  </li>
  <li class="breadcrumb-item active" aria-current="page">
    <%= @tender.project_name %>
  </li>
<% end %>

<% content_for :nav_tabs do %>
  <% index = 0 %>
  <% wizard_steps.each do |wizard_step| %>
    <% if !@tender.request_for_tender.list_of_rates? && wizard_step.eql?(:bill_of_quantities) %>
      <% next %>
    <% end %>
    <% if !@tender.submitted_at.nil? && wizard_step.eql?(:upload_documents) %>
      <%= link_to "#{index + 1}. Uploaded Documents",
                  wizard_path(wizard_step),
                  class: "nav-item nav-link #{'active' if step == wizard_step}" %>
    <% else %>
      <%= link_to "#{index + 1}. #{wizard_step.to_s.humanize}",
                  wizard_path(wizard_step),
                  class: "nav-item nav-link #{'active' if step == wizard_step}" %>
    <% end %>
    <% index = index + 1 %>
  <% end %>
<% end %>



<!DOCTYPE html>
<html lang="en">

<%= render 'layouts/head' %>

<body class="<%= controller_name %> <%= action_name %>">

<%= render 'contractors/navbar' %>

<div class="content">

  <%= render 'contractors/page_head' %>

  <div class="container">
    <div class="row mt-4">

      <div class="col-lg-12 mx-auto">
        <%= render 'layouts/flash_messages' %>

        <%= yield %>
      </div>


    </div>
  </div>

</div>

<%= render 'layouts/end_of_body_scripts' %>

</body>
</html>