<script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <div class="tab-content mt-4">

        <div class="card-header">
          Documents
        </div>

        <div class="card-body">
          <table class="table">

            <tbody>
            <% @participant.other_document_uploads.each do |document_upload| %>
              <tr>

                <td>
                  <% if document_upload.read? %>
                    <%= document_upload.name  %>
                  <% else %>
                    <strong><%= document_upload.name  %></strong>
                  <% end %>
                </td>
                <td>
                  <% if document_upload.document.format == "pdf" %>
                    <%= link_to 'View', view_pdf_for_other_documents_path(@participant, document_upload.id) %>
                  <% else %>
                    <%= link_to 'View', view_image_for_other_documents_path(@participant, document_upload.id) %>
                  <% end %>
                </td>
                <td>
                  <% if document_upload.status.eql?('approved') %>
                    <i class="fa fa-check document-approve"></i>
                  <% else %>
                    <i class="fa fa-exclamation-triangle document-issue"></i>
                  <% end %>
                </td>
                <td></td>
                <td>
                  <%= link_to 'Download', document_upload.document.url, target: '_blank',
                              class: 'btn btn-sm btn-light' %>
                </td>

              </tr>
            <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
