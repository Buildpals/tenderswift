              scope: :request_for_tender,
              url: update_tender_payment_method_path(@request_for_tender),
              method: :patch,
              local: true,
              id: 'request-form' do |form| %>

  <%= render 'layouts/create_tender_navigation', location: 'top', request: @request_for_tender, form: form %>

